<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ovh.vii.logmyday" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp">
        <activity
            android:name=".DayActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FieldsActivity"
            android:label="@string/title_activity_fields"
            android:parentActivityName=".DayActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ovh.vii.logmyday.DayActivity" />
        </activity>
        <activity
            android:name=".FieldDetailActivity"
            android:label="@string/title_activity_field_detail"
            android:parentActivityName=".FieldsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ovh.vii.logmyday.FieldsActivity" />
        </activity>
    </application>

</manifest>
